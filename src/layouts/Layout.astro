---
import "@/styles/global.css";

interface Props {
  lang?: string;
  title?: string;
  description?: string;
  image?: string;
  article?: {
    publishedTime: string;
    modifiedTime?: string;
    section: string;
  };
}

const defaultTitle = "Alexis Tacnet — Software Engineer, SRE and Designer";
const defaultDescription =
  "Software engineer, SRE and Designer. I love to design, code, and deploy stuff.";
const defaultImage = "/og.png";

const {
  title,
  description = defaultDescription,
  image = defaultImage,
  article,
  lang = "en",
} = Astro.props;

let computedTitle = defaultTitle;
if (title) {
  computedTitle = `${title} — Alexis Tacnet`;
}
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="48x48" href="/favicon-48x48.png" />
    <link
      rel="icon"
      type="image/png"
      sizes="192x192"
      href="/favicon-192x192.png"
    />
    <link
      rel="apple-touch-icon"
      type="image/png"
      sizes="180x180"
      href="/favicon-180x180.png"
    />

    <title>{computedTitle}</title>
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="Alexis Tacnet" />

    <!-- Canonical URL -->
    <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site)} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={new URL(Astro.url.pathname, Astro.site)} />
    <meta property="og:title" content={computedTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:site_name" content="Alexis Tacnet" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@fuegoio" />
    <meta name="twitter:title" content={computedTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />

    <!-- Additional SEO -->
    <meta
      name="keywords"
      content="tech, engineering, development, design, blog, coding, projects"
    />

    <!-- Article-specific (for blog posts) -->
    {
      article && (
        <>
          <meta
            property="article:published_time"
            content={article.publishedTime}
          />
          <meta
            property="article:modified_time"
            content={article.modifiedTime || article.publishedTime}
          />
          <meta property="article:author" content="Alexis Tacnet" />
          <meta property="article:section" content={article.section} />
          <meta property="og:type" content="article" />
        </>
      )
    }

    <!-- Preconnect -->
    <link rel="preconnect" href="https://umami.alexistac.net" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    {
      import.meta.env.PROD && (
        <script
          defer
          src="https://umami.alexistac.net/script.js"
          data-website-id="c96e63cf-c538-41fb-a6d3-5a0fd4bfa972"
        />
      )
    }

    <!-- Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Tiny5&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
